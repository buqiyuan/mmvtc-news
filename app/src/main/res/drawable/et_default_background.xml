<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <gradient
                android:centerColor="#8affffff"
                android:startColor="#8affffff"
                android:endColor="#8affffff"
                android:type="linear"
                />
            <stroke android:width="1dp" android:color="@color/defaultEditTextBackground" />
            <corners android:radius="2dp" />
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:centerColor="#8affffff"
                android:startColor="#8affffff"
                android:endColor="#8affffff"
                android:type="linear"
                />
            <stroke android:width="1dp"  android:color="@color/defaultEditTextBackgroundFocus" />
            <corners android:radius="2dp" />
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
        </shape>
    </item>
</selector>